<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="Theme.Apps65.AppBarTitle">
		<item name="android:textSize">@dimen/appBarTitleTextSize</item>
		<item name="android:textColor">?attr/colorOnPrimary</item>
		<item name="android:textStyle">bold</item>
		<item name="android:maxLines">1</item>
	</style>

	<style name="Theme.Apps65.DescriptionText">
		<item name="android:textColor">?attr/colorOnSurface</item>
		<item name="android:textSize">@dimen/mediumDescriptionTextSize</item>
	</style>

	<style name="Theme.Apps65.Card"
		parent="Widget.MaterialComponents.CardView">
		<item name="android:layout_marginTop">@dimen/small_margin_padding</item>
		<item name="android:layout_marginBottom">@dimen/small_margin_padding</item>
		<item name="android:layout_marginLeft">@dimen/medium_margin_padding</item>
		<item name="android:layout_marginRight">@dimen/medium_margin_padding</item>
		<item name="cardCornerRadius">@dimen/medium_corner_radius</item>
		<item name="android:layout_marginStart">@dimen/medium_margin_padding</item>
		<item name="android:layout_marginEnd">@dimen/medium_margin_padding</item>
		<item name="rippleColor">?attr/cardRippleColor</item>
	</style>

	<style name="Theme.Apps65.Toolbar"
		parent="Widget.MaterialComponents.Toolbar.PrimarySurface">
	</style>

	<style name="Theme.Apps65.BackButton"
		parent="Widget.MaterialComponents.Button.TextButton">
		<item name="icon">@drawable/ic_arrow_back</item>
		<item name="iconGravity">start</item>
		<item name="android:minWidth">@dimen/zero_size</item>
		<item name="android:paddingTop">@dimen/medium_large_margin_padding</item>
		<item name="android:paddingBottom">@dimen/medium_large_margin_padding</item>
		<item name="android:layout_marginRight">@dimen/medium_margin_padding</item>
		<item name="cornerRadius">@dimen/large_corner_radius</item>
		<item name="iconTint">?colorOnPrimary</item>
		<item name="rippleColor">?colorOnPrimary</item>
	</style>

	<style name="Theme.Apps65.RoundedImage">
		<item name="cornerSize">50%</item>
	</style>
</resources>